@model EditRoleViewModel

@{ 
    ViewData["Title"] = "Edit Role";
}

<div class="text-center">
    <h1 class="display-4">Edit Role</h1>
</div>

<form method="post">

    <div class="card-deck">
        <div class="card">
            @*<div class="card-header text-center"><h3>Edit Role</h3></div>*@
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-3">
                        <label asp-for="Id">Role Id</label>
                    </div>
                    <div class="col-md-6">
                        <input asp-for="Id" class="form-control" disabled />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <label asp-for="RoleName">Role Name</label>
                    </div>
                    <div class="col-md-6">
                        <input asp-for="RoleName" class="form-control" placeholder="Role Name" />
                        <span asp-validation-for="RoleName" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            </div>
            <div class="card-footer">
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button style="width:auto" type="submit" class="btn btn-primary">Update</button>
                        <a asp-action="ListRoles" asp-controller="Administration" class="btn btn-secondary">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="card">
        <div class="card-header">
            <h3>Users in this role</h3>
        </div>
        <div class="card-body">
            @if(Model.Users.Any())
            {
                foreach(var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">There is no user at the moment</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="EditUsersInRole" asp-controller="Administration" 
               asp-route-roleId="@Model.Id" class="btn btn-success" style="width:auto">Add or Remove Users</a>
        </div>
    </div>
</form>