@model List<ManageUserRolesViewModel>

@{ 
    ViewData["Title"] = "Manage User Roles";
    var userId = ViewBag.userId;
}

<div class="text-center">
    <h1 class="display-4">Add or remove roles for this user</h1>
</div>

<form method="post">
    <div class="card-deck">
        <div class="card">
            <div class="card-body">
                @for(int i = 0; i < Model.Count; i++)
                {
                    <div class="form-group row">
                        <div class="form-check">
                            <input type="hidden" asp-for="@Model[i].RoleId" />
                            <input type="hidden" asp-for="@Model[i].RoleName" />
                            <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                            <label asp-for="@Model[i].IsSelected" class="form-check-label">@Model[i].RoleName</label>
                        </div>
                    </div>
                }

            </div>
            <div class="card-footer">
                <div class="form-group row">
                    <div class="col-sm-10">
                        <button style="width:auto" type="submit" class="btn btn-primary">Update</button>
                        <a asp-action="EditUser" asp-controller="Administration" asp-route-id="@userId" class="btn btn-secondary">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>