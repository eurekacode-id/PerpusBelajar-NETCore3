@model BookCreateViewModel

@{
    ViewData["Title"] = "Add Book Page";
}

<form enctype="multipart/form-data" asp-controller="Book" asp-action="Create" method="post">
    <div class="card-deck">
        <div class="card">
            <div class="card-header text-center"><h3>Add new book</h3></div>
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-3">
                        <label asp-for="Title">Title</label>
                    </div>
                    <div class="col-md-6">
                        <input asp-for="Title" class="form-control" placeholder="Title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <label asp-for="Author">Author</label>
                    </div>
                    <div class="col-md-6">
                        <input asp-for="Author" class="form-control" placeholder="Author" />
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <label asp-for="ISBN">ISBN</label>
                    </div>
                    <div class="col-md-6">
                        <input asp-for="ISBN" class="form-control" placeholder="ISBN" />
                        <span asp-validation-for="ISBN" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <label asp-for="Quantity">Quantity</label>
                    </div>
                    <div class="col-md-6">
                        <input asp-for="Quantity" class="form-control" placeholder="Quantity" min="0" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <label asp-for="Category">Category</label>
                    </div>
                    <div class="col-md-6">
                        <select asp-for="Category" asp-items="Html.GetEnumSelectList<BookCategory>()" class="form-control">
                            <option value="">Please Select</option>
                        </select>
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <label asp-for="Image">Book Cover</label>
                    </div>
                    <div class="col-md-6">
                        <div class="custom-file">
                            <input asp-for="Image" class="form-control custom-file-input" />
                            <label class="custom-file-label">Choose file...</label>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>

                @section Scripts{ 
                    <script>
                        $(document).ready(function () {
                            $('.custom-file-input').on("change", function () {
                                var filename = $(this).val().split('\\').pop();
                                $(this).next('.custom-file-label').html(filename);
                            });
                        });
                    </script>
                }
            </div>
        </div>
    </div>
</form>